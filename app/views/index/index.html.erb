<!DOCTYPE html>
<html>
  <head>
    <title>Foodexpiry</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="text-align: center">
    <nav class="navbar navbar-light bg-light justify-content-between">
      <a class="navbar-brand">Foodexpiry</a>
    </nav>
    <div class="index-bg">
    <div class="row" style="padding-bottom: 35em";>
      <div class="col">
        1 of 3
      </div>
      <div class="col-6" text-align: "center">
        <h1>#StopFoodWaste</h1>
        <h3></h3>
        <p>See the actual expiry date of food</p>
        <div class="container" text-align: "center">
          <div class="card-body">
            <p class="card-text">Stop food waste</p>
            <%= form_tag index_index_path, method: :get, id: 'submit-search' do %>
              <%= text_field_tag :name, params[:name], placeholder: 'Name', autofocus: true %>
              <%= submit_tag 'Skicka', id: 'search-button' %>
            <% end %>

            <% if @products.present? %>
              <% @products.each do |product| %>
                <%= product.name %><br />
                <%= product.description %><br />
                <%= product.best_before %> <p>dagar h√•llbarhet</p><br />
                <%= product.recommendations %>
              <% end %>
            <% end %>

            <%= yield %>
      </div>
      </div>
    </div>
    <div class="col">
      3 of 3
    </div>
  </div>

    </div>
  </div>

    <%= yield %>
  </body>
</html>
